                    style="@style/TextFieldFontDisabled"
                    android:gravity="end"/>
            </RelativeLayout>

    </LinearLayout>
    <ListView android:id="@+id/addressList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_bg"
        android:orientation="vertical"
