<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center"
        android:text="@string/signup_fb"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Or"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/txt_email"
                style="@style/TextFieldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/btn_signup"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textEmailAddress" >

                <requestFocus />
            </EditText>
            
            <EditText
                android:id="@+id/txt_name"
                style="@style/TextFieldFont"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_email"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="abcd@example.com"
                android:inputType="textPersonName"
                android:text="abcd@example.com" />

            <EditText
                android:id="@+id/txt_pswd"
                style="@style/TextFieldFont"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/txt_email"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="45dp"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_email"
                android:layout_marginTop="60dp"
                android:text="@string/signup" 
                />
    </RelativeLayout>
<include layout="@layout/foot_menu"/>
</LinearLayout>